<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.sodp5.intellijpluginsample</id>
    <name>IntellijPluginSample</name>
    <vendor>sodp5</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.sodp5.intellijpluginsample.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.sodp5.intellijpluginsample.services.MyProjectService"/>

        <java.shortNamesCache implementation="com.github.sodp5.intellijpluginsample.launcher.LauncherClassNameCache"/>
        <java.elementFinder implementation="com.github.sodp5.intellijpluginsample.launcher.LauncherClassFinder"/>
        <java.elementFinder implementation="com.github.sodp5.intellijpluginsample.launcher.LauncherPackageFinder"/>

        <resolveScopeEnlarger implementation="com.github.sodp5.intellijpluginsample.launcher.LauncherScopeEnlarger"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.sodp5.intellijpluginsample.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
